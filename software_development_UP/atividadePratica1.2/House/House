
public class House {
	private String color;
	private Door door1;
	private Door door2;
	private Door door3;
	//construtor da class
	public House(String color, Door door1, Door door2, Door door3) {
        this.color = color;
        this.door1 = door1;
        this.door2 = door2;
        this.door3 = door3;
    }
	public void paint(String cor) {
        this.color = cor;
        System.out.println("A casa foi pintada de " + cor + ".");
    }
	public int howManyDoorsAreOpen() {
		int doors_open = 0;
		if(door1.isOpen()){
			doors_open++;
		}
		if(door2.isOpen()){
			doors_open++;
		}
		if(door3.isOpen()){
			doors_open++;
		}
		return doors_open;
	}
	public String toString() {
		return "A cor da casa Ã©: " + this.color;
	}
}
